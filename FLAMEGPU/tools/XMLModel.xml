<?xml version="1.0" encoding="utf-8"?>
<gpu:xmodel xmlns:gpu="http://www.dcs.shef.ac.uk/~paul/XMMLGPU" xmlns="http://www.dcs.shef.ac.uk/~paul/XMML">
	<name>Basic model</name>
	<gpu:environment>
		<gpu:functionFiles>
			<file>functions.c</file>
		</gpu:functionFiles>
	</gpu:environment>
	<xagents>
		<gpu:xagent>
			<name>business</name>
			<memory>
				<gpu:variable>
					<type>int</type>
					<name>id</name>
				</gpu:variable>
				<gpu:variable>
					<type>int</type>
					<name>maxEmployees</name>
				</gpu:variable>
				<gpu:variable>
					<type>int</type>
					<name>x</name>
				</gpu:variable>
				<gpu:variable>
					<type>int</type>
					<name>y</name>
				</gpu:variable>
			</memory>
			<gpu:function>
				<name>updateState</name>
				<currentState>default</currentState>
				<nextState>default</nextState>
			</gpu:function>
			<gpu:function>
				<name>outputState</name>
				<currentState>default</currentState>
				<nextState>default</nextState>
				<outputs>
					<gpu:output></gpu:output>
				</outputs>
			</gpu:function>
			<states>
				<gpu:state>
					<name>start</name>
				</gpu:state>
				<initialState>start</initialState>
				<gpu:state>
					<name>grow</name>
				</gpu:state>
				<gpu:state>
					<name>shrink</name>
				</gpu:state>
			</states>
			<gpu:type>discrete</gpu:type>
			<gpu:bufferSize>16</gpu:bufferSize>
		</gpu:xagent>
	</xagents>
	<layers>
		<gpu:layerFunction>
			<name>outputState</name>
		</gpu:layerFunction>
	</layers>
	<layers>
		<gpu:layerFunction>
			<name>updateState</name>
		</gpu:layerFunction>
	</layers>
</gpu:xmodel>